@model AgendaCorp.ViewModels.PalestranteViewModel

@{
    ViewData["Title"] = "Details";
}

<div>
    <h1>Detalhes</h1>
    <h4>Palestrante</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Telefone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Telefone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Area)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Area)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EventosSelectList)
        </dt>
        <dd class = "col-sm-10"> 
            @if (Model.EventosSelectList.Any())
            {
                <ul>
                    @foreach (var evento in Model.EventosSelectList)
                    {
                        <li>
                            @evento.Text
                        </li>
                    }
                </ul>
            }
            else
            {
                <span>
                    Nenhum evento vinculado
                </span>
            }
         </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model?.PalestranteId">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</div>
<hr />
