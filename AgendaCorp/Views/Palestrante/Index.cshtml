@model IEnumerable<AgendaCorp.Models.Palestrante>

@{
    ViewData["Title"] = "Index";
}

<h1>Palestrantes</h1>

<br />
<p>
    <a asp-action="Create" class="btn btn-primary">Adicionar Palestrante</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Area)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Evento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Area)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Evento.Nome)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-primary px-sm-1 py-0" asp-route-id="@item.PalestranteId">Editar</a>
                <a asp-action="Details" class="btn btn-primary px-sm-1 py-0" asp-route-id="@item.PalestranteId">Detalhes</a>
                <a asp-action="Delete" class="btn btn-danger px-sm-1 py-0" asp-route-id="@item.PalestranteId">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
