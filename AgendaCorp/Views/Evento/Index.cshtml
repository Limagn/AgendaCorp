@model IEnumerable<AgendaCorp.Models.Evento>

@{
    ViewData["Title"] = "Index";
}

<h1>Eventos</h1>

<br />
<p>
    <a asp-action="Create" class="btn btn-primary">Adicionar Evento</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Local)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Uf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modalidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Inscricoes)
            </th>
            <th>
				@Html.DisplayName("Palestrantes")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Local)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Uf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modalidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Inscricoes.Count)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PalestranteEvento.Count)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-primary px-sm-1 py-0" asp-route-id="@item.EventoId">Editar</a>
                <a asp-action="Details" class="btn btn-primary px-sm-1 py-0" asp-route-id="@item.EventoId">Detalhes</a>
                <a asp-action="Delete" class="btn btn-danger px-sm-1 py-0" asp-route-id="@item.EventoId">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
