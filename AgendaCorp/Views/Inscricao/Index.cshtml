@model IEnumerable<AgendaCorp.Models.Inscricao>

@{
    ViewData["Title"] = "Index";
}

<h1>Inscrições</h1>

<br />
<p>
    <a asp-action="Create" class="btn btn-primary">Adicionar Inscrição</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Evento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Evento.Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Participante)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataInscricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Evento.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Evento.Data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Participante.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataInscricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-primary px-sm-1 py-0" asp-route-id="@item.InscricaoId">Editar</a>
                    <a asp-action="Details" class="btn btn-primary px-sm-1 py-0" asp-route-id="@item.InscricaoId">Detalhes</a>
                <a asp-action="Delete" class="btn btn-danger px-sm-1 py-0" asp-route-id="@item.InscricaoId">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
