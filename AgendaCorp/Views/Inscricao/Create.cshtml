@model AgendaCorp.Models.Inscricao

@{
    ViewData["Title"] = "Create";
}

<h1>Adicionar</h1>

<h4>Inscricao</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EventoId" class="control-label"></label>
                <select asp-for="EventoId" class ="form-control" asp-items="ViewBag.EventoId">
					<option value="">--Selecione--</option>
                </select>
                <span asp-validation-for="EventoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ParticipanteId" class="control-label"></label>
                <select asp-for="ParticipanteId" class ="form-control" asp-items="ViewBag.ParticipanteId">
                    <option value="">--Selecione--</option>
                </select>
                <span asp-validation-for="ParticipanteId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control">
                    <option value="">--Selecione--</option>
                    <option value="Confirmado">Confirmado</option>
					<option value="Aguardando Confirmação">Aguardando Confirmação</option>
					<option value="Cancelado">Cancelado</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
			<br />
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
