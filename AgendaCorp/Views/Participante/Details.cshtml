@model AgendaCorp.Models.Participante

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Participante</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Telefone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Telefone)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model?.ParticipanteId">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</div>
<br />
<h4>Inscrições</h4>
<hr />
<ul>
    @foreach (var inscricao in Model.Inscricoes)
    {
        <li>@inscricao.Evento.Nome</li>
    }
</ul>
</div>